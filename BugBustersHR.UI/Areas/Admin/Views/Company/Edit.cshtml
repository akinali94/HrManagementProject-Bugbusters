                        <input type="file" asp-for="ImageModel.File" accept="image/*" class="form-control" id="photoInput" style="display:none;" onchange="updateProfileImage()">
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-4">
                        <!-- Column 1 -->
                        <div class="form-floating">
                            <input asp-for="CompanyName" class="form-control shadow-sm" />
                            <label asp-for="CompanyName" class="control-label"></label>
                            <span asp-validation-for="CompanyName" class="text-danger"></span>
                        </div>
                        <div class="form-floating">
                            <input asp-for="CompanyTitle" class="form-control shadow-sm" />
                            <label asp-for="CompanyTitle" class="control-label"></label>
                            <span asp-validation-for="CompanyTitle" class="text-danger"></span>
                        </div>
                        <div class="form-floating">
                            <input asp-for="MersisNo" class="form-control shadow-sm" />
                            <label asp-for="MersisNo" class="control-label"></label>
                            <span asp-validation-for="MersisNo" class="text-danger"></span>
                        </div>
                        <div class="form-floating">
                            <input asp-for="TaxNumber" class="form-control shadow-sm" />
                            <label asp-for="TaxNumber" class="control-label"></label>
                            <span asp-validation-for="TaxNumber" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-md-4">
                        <!-- Column 2 -->
                        <div class="form-floating">
                            <input asp-for="EmployeeNumber" class="form-control shadow-sm" />
                            <label asp-for="EmployeeNumber" class="control-label"></label>
                            <span asp-validation-for="EmployeeNumber" class="text-danger"></span>
                        </div>
                        <div class="form-floating">
                            <input asp-for="FoundationYear" class="form-control shadow-sm" />
                            <label asp-for="FoundationYear" class="control-label"></label>
                            <span asp-validation-for="FoundationYear" class="text-danger"></span>
                        </div>
                        <div class="form-floating">
                            <input asp-for="ContractStartDate" class="form-control shadow-sm" />
                            <label asp-for="ContractStartDate" class="control-label"></label>
                            <span asp-validation-for="ContractStartDate" class="text-danger"></span>
                        </div>
                        <div class="form-floating">
                            <input asp-for="ContractEndDate" class="form-control shadow-sm" />
                            <label asp-for="ContractEndDate" class="control-label"></label>
                            <span asp-validation-for="ContractEndDate" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-md-4">
                        <!-- Column 3 -->
                        <div class="form-floating">
                            <input asp-for="TelephoneNumber" class="form-control shadow-sm" />
                            <label asp-for="TelephoneNumber" class="control-label"></label>
                            <span asp-validation-for="TelephoneNumber" class="text-danger"></span>
                        </div>
                        <div class="form-floating">
                            <input asp-for="Address" class="form-control shadow-sm" />
                            <label asp-for="Address" class="control-label"></label>
                            <span asp-validation-for="Address" class="text-danger"></span>
                        </div>
                        <div class="form-floating">
                            <input asp-for="Email" class="form-control shadow-sm" />
                            <label asp-for="Email" class="control-label"></label>
                            <span asp-validation-for="Email" class="text-danger"></span>
                        </div>

                    </div>
                </div>
                <hr />
                <div class="row justify-content-center">
                    <div class="col-sm-3 text-center">
                        <label for="photoInput" class="btn btn-outline-dark btn-light">
                            <i class="fas fa-upload"></i> Upload Photo
                        </label>
                    </div>
                    <div class="col-sm-3 text-center">
                        <button id="updateButton" type="submit" class="btn btn-outline-dark btn-light toast-btn" data-target="successToast">
                            <i class="fas fa-save"></i> Save
                        </button> &nbsp
                    </div>
                    <div class="col-sm-3 text-center">
                        <a asp-area="Admin" asp-controller="Default" asp-action="GetManagerDetail" class="btn btn-outline-dark btn-light">
                            <i class="fas fa-info-circle"></i> Detailed Info
                        </a>
                    </div>
                    <div class="col-sm-3 text-center">
                        <a asp-area="Admin" asp-controller="Default" asp-action="Index" class="btn btn-dark btn-outline-secondary text-lg-center">
                            <i class="fas fa-home"></i> Home
                        </a>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>
<script>
    function updateProfileImage() {
        var profileImage = document.getElementById("profileImage");
        var photoInput = document.getElementById("photoInput");

        if (photoInput.files && photoInput.files[0]) {
            var reader = new FileReader();

            reader.onload = function (e) {
                profileImage.src = e.target.result;
            };

            reader.readAsDataURL(photoInput.files[0]);
        }

        validateAndUpdateButton(); // Update the button status after image change
    }



    function showSuccessToast() {
        // Show the toast notification
        var toast = new bootstrap.Toast(document.getElementById('successToast'));
        toast.show();

        // Wait for a few seconds (adjust the delay as needed)
        //setTimeout(function () {
        //    // Submit the form
        //    document.getElementById('editProfileForm').submit();
        //}, 4000); // 4 seconds delay, you can change this to your preferred value
    }

    // Find all buttons with the toast-btn class
    var toastButtons = document.getElementsByClassName('toast-btn');
    for (var i = 0; i < toastButtons.length; i++) {
        toastButtons[i].addEventListener('click', showSuccessToast);
    }

    var telephoneNumberInput = document.getElementById("telephoneNumber");
    telephoneNumberInput.addEventListener("input", validateAndUpdateButton);
    var addressInput = document.getElementById("Address");
    addressInput.addEventListener("input", validateAndUpdateButton);
</script>



<script>
    var telephoneNumberInput = document.getElementById("telephoneNumber");
    telephoneNumberInput.addEventListener("input", validateAndUpdateButton);
    var addressInput = document.getElementById("Address");
    addressInput.addEventListener("input", validateAndUpdateButton);

    //var backgroundImageInput = document.getElementById("backgroundImageInput");
    //backgroundImageInput.addEventListener("change", validateAndUpdateButton);

    var photoInput = document.getElementById("photoInput");
    photoInput.addEventListener("change", validateAndUpdateButton);

    var originalTelephoneNumber = telephoneNumberInput.value;
    var originalAddress = addressInput.value;

    function validateAndUpdateButton() {
        var updateButton = document.getElementById("updateButton");
        var isValidTelephoneNumber = validatePhoneNumber(telephoneNumberInput.value);
        var isValidAddress = validateAddress(addressInput.value);
        var isImageChanged = isFileSelected(photoInput);
        //var isBackgroundImageChanged = isFileSelected(backgroundImageInput);


        var telephoneNumberChanged = originalTelephoneNumber !== telephoneNumberInput.value;
        var addressChanged = originalAddress !== addressInput.value;

        updateButton.disabled = !(isValidTelephoneNumber && isValidAddress && (isImageChanged || telephoneNumberChanged || addressChanged));
    }

    function validatePhoneNumber(telephoneNumber) {
        // Telefon numarasının sadece rakamlardan oluşup oluşmadığını kontrol et
        return /^[0-9]{11}$/.test(telephoneNumber);
    }

    function validateAddress(address) {
        return address.trim() !== "";
    }

    function isFileSelected(input) {
        return input.files && input.files.length > 0;
    }
</script>

