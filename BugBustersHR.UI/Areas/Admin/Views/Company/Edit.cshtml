<div class="container-fluid px-2 px-md-4 d-flex justify-content-end align-items-center mt-n12 bg-light" style="min-height: 100vh">
    <div class="col-10 mt-n12 bg-light">
        <div class="card card-body mx-3 mx-md-4 bg-light opacity-9">
            <div class="card-header pb-0 p-3 bg-light">
                <div class="row">
                    <div class="col-md-12 d-flex justify-content-center align-items-center">
                        <h2 class="mb-0">Edit Company</h2>
                    </div>
                </div>
            </div>
            <form asp-area="Admin" asp-controller="Default" asp-action="ManagerEdit" method="post" enctype="multipart/form-data" id="editProfileForm">
                <input type="hidden" asp-for="Id" />
                <div class="row justify-content-center align-items-center mb-2">
