@model IEnumerable<BugBustersHR.BLL.ViewModels.ManagerViewModel.GetEmployeeListVM>

@{
    ViewData["Title"] = "GetEmployeeList";
}

<style>
    .nav-item .nav-link:hover {
        background-color: lightgray; /* You can change this color to whatever you prefer */
        transition: background-color 0.3s ease; /* Optional: Adds a smooth transition effect */
    }
</style>

<body class="g-sidenav-show  bg-gray-200">
    <div class="container-fluid mt-6 px-md-4 d-flex justify-content-end align-items-center">
        <div class="col-10">
            <div class="page-header min-height-300 border-radius-xl" style="background-image: url('https://images.unsplash.com/photo-1531512073830-ba890ca4eba2?ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&ixlib=rb-1.2.1&auto=format&fit=crop&w=1920&q=80');">
                <span class="mask bg-gradient-secondary opacity-6"></span>
            </div>
        </div>
    </div>

    @*Here goes the content withour Navbar*@
    <div class="container-fluid px-2 px-md-4 d-flex justify-content-end align-items-center mt-n12" style="height: 100vh;">
        <div class="col-10 mt-n8">
            <div class="col-12">
                <div class="bg-light card card-body mx-2 mx-md-4 bg-light opacity-9">
                    <div class="col-md-12 d-flex justify-content-center align-items-center">
                        <h2 class="mb-1 mt-4">Employee List</h2>
                    </div>
                    <div class="card-body mt-5 p-0">
                        <div class="row justify-content-center">
                            <div class="col-md-12">
                                <div class="table-responsive m-0 p-0 scrollable-table" style="margin: 0 !important; padding: 0 !important;">
                                    <table class="table table-bordered table-hover align-items-center">
                                        <thead class="thead-dark sticky-header">
                                            <tr>
                                                <th>
                                                    Image
                                                </th>
                                                <th>
                                                    Full Name
                                                </th>
                                                <th>
                                                    @Html.DisplayNameFor(model => model.Email)
                                                </th>
                                                <th>
                                                    Phone Number
                                                </th>
                                                <th>
                                                    @Html.DisplayNameFor(model => model.Section)
                                                </th>
                                                <th>
                                                    @Html.DisplayNameFor(model => model.Title)
                                                </th>
                                                <th>Action</th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            @foreach (var item in Model)
                                            {
                                                <div class="modal fade" id="deleteConfirmationModal" tabindex="-1" aria-labelledby="deleteModalLabel" aria-hidden="true">
                                                    <div class="modal-dialog">
                                                        <div class="modal-content">
                                                            <div class="modal-header">
                                                                <h5 class="modal-title" id="deleteModalLabel">Delete Confirmation</h5>
                                                                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                                                            </div>
                                                            <div class="modal-body">
                                                                Are you sure you want to delete this item?
                                                            </div>
                                                            <div class="modal-footer">
                                                                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>


                                                                <a asp-area="Manager" asp-controller="Default" asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger">Yes, Delete</a>

                                                            </div>
                                                        </div>
                                                    </div>
                                                </div>
                                                <tr>
                                                    <td>
                                                            @if (item.ImageUrl == null)
                                                            {
                                                            <h5> No Picture</h5>
                                                            }
                                                            else
                                                            {
                                                            <img src="@Url.Content(item.ImageUrl)" alt="Company Logo" class="company-logo" style="width: 100px; height: 100px;" />
                                                            }


                                                    </td>
                                                    <td>
                                                        @Html.DisplayFor(modelItem => item.FullName)
                                                    </td>
                                                    <td>
                                                        @Html.DisplayFor(modelItem => item.Email)
                                                    </td>
                                                    <td>
                                                        @Html.DisplayFor(modelItem => item.TelephoneNumber)
                                                    </td>
                                                    <td>
                                                        @Html.DisplayFor(modelItem => item.Section)
                                                    </td>
                                                    <td>
                                                        @Html.DisplayFor(modelItem => item.Title)
                                                    </td>
                                                    <td>
@*                                                        @Html.ActionLink("Edit", "ManagerEdit", new {  id=item.Id }) |
*@                                                        @Html.ActionLink("Details", "GetEmployeeDetails", new { id=item.Id })
                                                        <a href="#" class="btn btn-danger delete-trigger" data-id="@item.Id" data-bs-toggle="modal" data-bs-target="#deleteConfirmationModal">
                                                            Delete
                                                        </a>
                                                    </td>
                                                </tr>
                                                
                                            }
                                        </tbody>
                                    </table>
                                </div>
                            </div>
                        </div>
                        <div class="row justify-content-center">
                            <div class="col-md-12 bg-light">
                                <hr />
                                <ul class="nav flex-column nav-pills bg-light">
                                    <li class="nav-item mt-2">
                                        <a asp-controller="Default" asp-action="Index" class="btn btn-dark btn-outline-secondary text-lg-center">
                                            <i class="fas fa-home"></i> Home
                                        </a>
                                    </li>
                                </ul>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
