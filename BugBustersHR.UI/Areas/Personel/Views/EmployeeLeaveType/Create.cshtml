    <form class="form-horizontal" asp-action="Create">
        <div asp-validation-summary=ModelOnly class="text-danger"></div>
        <div class="form-group">
            <label class="col-sm-3 control-label no-padding-right" asp-for="Name">Leave Type</label>
            <div class="col-sm-9">
                <input asp-for="Name" type="text" id="form-field-1" placeholder="Username" class="col-xs-10 col-sm-5" />
                <span asp-validation-for="Name"></span>

            </div>
        </div>



        <div class="form-group">
            <label class="col-sm-3 control-label no-padding-right">Default Day</label>
            <div class="col-sm-9">
                <input asp-for="DefaultDay" type="text" id="form-field-1" class="col-xs-10 col-sm-5" />

            </div>
        </div>
        <div class="form-group">
            <label asp-for="Gender" class="control-label"></label>
            <select asp-for="Gender" class="form-control">
                @foreach (var genderType in Enum.GetValues(typeof(GenderType)))
                {
                    <option value="@genderType">@genderType</option>
                }
            </select>
            <span asp-validation-for="Gender" class="text-danger"></span>
        </div>



        <div class="clearfix form-actions">
            <div class="col-md-offset-3 col-md-9">


