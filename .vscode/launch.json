{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Debug BugBustersHR.UI",
      "type": "coreclr",
      "request": "launch",
      "preLaunchTask": "build-ui",
      "program": "dotnet",
      "args": [
        "run",
        "--project",
        "${workspaceFolder}/BugBustersHR.UI/BugBustersHR.UI.csproj"
      ],
      "cwd": "${workspaceFolder}/BugBustersHR.UI",
      "env": {
        "ASPNETCORE_ENVIRONMENT": "Development",
        "DOTNET_ENVIRONMENT": "Development"
      },
      "console": "integratedTerminal",
      "stopAtEntry": false,
      "justMyCode": true,
      "serverReadyAction": {
        "action": "openExternally",
        "pattern": "\\bNow listening on:\\s+(https?://\\S+)"
      }
    },
  ]
}
